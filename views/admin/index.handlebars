<head>
  <style>
    .navbar-nav {
      text-align: center;
      display: block;
      font-size: 20px;
      font-weight: bold;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .nav-item {
      display: inline-block;
    }

    .nav-item a {

      color: #37c860;
      margin-left: 40px;
    }

    .nav-item a:hover {
      color: #37c860;
    }
  </style>
</head>
<div class="col-8">
  <h2 style="text-align:center ;">
    <span>
      <a href="/admin">YÖNETİCİ PANEL</a>
    </span>
  </h2>
  <hr>
  <div class="profil-photos">
    <img class="kapak-foto2" src="/images/admin-kapak.jpg" alt="" width="100%" height="390vh">
    <img class="profil-foto3" src="/images/admin-pp.jpg" alt="">
  </div>
  <hr>
  <section id="aboutus" class="md-padding">
    <div class="container">
      <ul class="navbar-nav text-uppercase ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="" target="_blank">Admin</a>
        </li>
      </ul>
    
    <hr>
    <div class="clearfix"></div>
    <div class="mb-5"></div>
    <div class="row">
      <div class="col-md-4">
        <form action="" method="post" enctype="multipart/form-data">
          <div class="row">
            <div class="col-md-10">
              <div class="form-group">
                <input type="text" name="name" class="form-control" required="required">
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="mb-2"></div>
            <div class="col-lg-12">
              <div id="success"></div>
              <button type="submit" class="btn btn-primary" style="width:243px; ">Panelde Ara</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-16">
        <table class="table" style="color:rgb(255, 255, 255); ;">
          <thead>
            <tr>
              <th style="display:none ;">ID</th>
              <th>USERNAME</th>
              <th>TITLE</th>
              <th>CONTENT</th>
              <th>DELETE</th>
            </tr>
          </thead>
          <tbody>
            {{#each posts}}
            <tr>
              <td style="display:none ;">{{_id}}</td>
              <td>@{{author.username}}</td>
              <td>{{title}}</td>
              <td>{{content}}</td>
              <td>
                <form action="/admin/{{_id}}?_method=DELETE" method="post">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger">DELETE</button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
          
        </table>
      </div>
    </div>
    </div>
    </section>
    </div>

